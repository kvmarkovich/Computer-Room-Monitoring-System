<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<!-- 
	<dubbo:application name="authorityProvider" />
	使用multicast广播注册中心暴露服务地址 <dubbo:registry address="multicast://224.5.6.7:1234" />
	<dubbo:registry id="oucRegistry" address="zookeeper://127.0.0.1:2181"></dubbo:registry>
           用dubbo协议在21000端口暴露服务
	<dubbo:protocol name="dubbo" port="21000" /> 
	-->
	
	<dubbo:application name="#{app.appName}" />
    <dubbo:registry id="oucRegistry" address="#{app.dubboRegistry}" protocol="zookeeper"/>
    <dubbo:protocol name="dubbo" port="#{app.dubboPort}" threads="#{app.dubboThreads}"
                    heartbeat="#{app.dubboHeartBeats}"/>   
                        
	<!-- 声明需要暴露的服务接口 -->
	<bean id="userDao" class="org.mybatis.spring.mapper.MapperFactoryBean" parent="baseDAO">
    	<property name="mapperInterface" value="com.ouc.dcrm.system.dao.UserDao" />
    </bean>
    
    <dubbo:service interface="com.ouc.dcrm.system.service.UserServiceClient" ref="userServiceClient" registry="oucRegistry" />
	<bean id="userServiceClient" class="com.ouc.dcrm.system.service.impl.UserServiceClientImpl">
		<property name="userDao" ref="userDao"/>
	</bean>
	
</beans>